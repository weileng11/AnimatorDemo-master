<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/activity_main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal"
		>
		
		<Button
			android:id="@+id/btn_sf"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="测试缩放"
			/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal"
		>
		
		<Button
			android:id="@+id/btn_valueanimator"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="ValueAnimator"
			/>
		
		<Button
			android:id="@+id/btn_layout_anim"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="布局动画"
			/>
		<Button
			android:id="@+id/btn_transition"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="Transition"
			/>
		
	</LinearLayout>
	
	<ImageView
		android:id="@+id/iv"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:gravity="left"
		android:src="@mipmap/ic_launcher"
		/>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		
		<Button
			android:id="@+id/animation_alpha"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="透明"
			/>
		
		<Button
			android:id="@+id/animation_scale"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="缩放"
			/>
		
		<Button
			android:id="@+id/animation_rotate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="旋转"
			/>
		
		<Button
			android:id="@+id/animation_translate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="位移"
			/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		
		<Button
			android:id="@+id/animation_group1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="组合1"
			/>
		
		<Button
			android:id="@+id/animation_group2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="组合2"
			/>
		
		<Button
			android:id="@+id/animation_group3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="重复1"
			/>
		
		<Button
			android:id="@+id/animation_group4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="重复2"
			/>
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		
		<Button
			android:id="@+id/animation_frame"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="动态改变背景颜色"
			/>
		
		<Button
			android:id="@+id/animation_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="仿QQ运动圆圈动画"
			/>
		
		<Button
			android:id="@+id/animation_activity"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onClick"
			android:text="抛物线动画"
			/>
	</LinearLayout>
	
	<cn.bluemobi.dylan.animatordemo.StepArcView
		android:id="@+id/sv"
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center"
		/>
</LinearLayout>
